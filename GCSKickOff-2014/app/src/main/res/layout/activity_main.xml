<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Vienna, Austria"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/notification_title"
        android:layout_alignEnd="@+id/notification_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Temperature = - C"
        android:id="@+id/temperature"
        android:layout_below="@+id/textView2"
        android:layout_alignRight="@+id/notification_title"
        android:layout_alignEnd="@+id/notification_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Weather"
        android:id="@+id/weather"
        android:layout_below="@+id/temperature"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />

    <TextView
        android:id="@+id/notification_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        android:textStyle="bold"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/notification_message"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/notification_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/temperature"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp" />


    <Button
        android:id="@+id/send_alert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/notification_title"
        android:layout_marginTop="41dp"
        android:text="Send Alert!" />

    <Button
        android:id="@+id/places_visit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/agenda"
        android:text="Places to Visit" />

    <Button
        android:id="@+id/restaurant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/places_visit"
        android:text="Restaurants Nearby" />

    <Button
        android:id="@+id/malls_nearby"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/restaurant"
        android:text="Malls Nearby" />

    <Button
        android:id="@+id/agenda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/send_alert"
        android:text="Agenda!" />

    <Button
        android:id="@+id/vote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/malls_nearby"
        android:text="Lets Vote!" />

    <Button
        android:id="@+id/forex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Foreign Exchange"
        android:layout_below="@+id/vote"
        android:layout_alignRight="@+id/weather"
        android:layout_alignEnd="@+id/weather" />

</RelativeLayout>
